<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragments.videoListFragment.VideoListFragment"
    >
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/idMediaFilterChipGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            app:singleSelection="true"
            app:selectionRequired="true"
            android:layout_gravity="center_vertical"
            >
            <com.google.android.material.chip.Chip
                android:id="@+id/idFilterAllMedia"
                style="@style/ChipsTheme"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="All"
                android:checked="true"
                android:focusedByDefault="true"
                />
            <com.google.android.material.chip.Chip
                android:id="@+id/idFilterLatestAdded"
                style="@style/ChipsTheme"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Latest Added"
                />
            <com.google.android.material.chip.Chip
                android:id="@+id/idFilterByName"
                style="@style/ChipsTheme"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="By Name"
                />
            <com.google.android.material.chip.Chip
                android:id="@+id/idFilterByDuration"
                style="@style/ChipsTheme"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="By Duration"
                />
            <com.google.android.material.chip.Chip
                android:id="@+id/idFilterBySize"
                style="@style/ChipsTheme"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="By Size"
                />

        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>
    <com.cooltechworks.views.shimmer.ShimmerRecyclerView
        android:id="@+id/idVideoRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="45dp"
        />
</androidx.coordinatorlayout.widget.CoordinatorLayout>